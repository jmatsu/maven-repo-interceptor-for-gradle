<div class="fill-content" data-controller="site">
  <div class="alert alert-success mt-4 hidden" role="alert" data-site-target="alert">
    dummy
  </div>

  <div class="input-group flex-nowrap mt-3">
    <input name="maven-url" type="url" class="form-control" placeholder="https://jcenter.bintray.com" aria-label="Maven URL" data-site-target="mavenUrl" required>

    <button type="button" role="button" class="btn btn-primary" data-action="click->site#downloadAll">
      Download All
    </button>
  </div>

  <button role="button" class="btn btn-outline-danger fill-content mt-3" data-action="click->site#startNewSession">
    Clear
  </button>

  <p class="mt-3" data-site-target="artifactsCount"></p>
  <p class="mt-3"><span class="text-success" data-site-target="downloadedArtifactsCount"></span> <span class="text-danger" data-site-target="missingArtifactsCount"></span></p>

  <table class="table table-hover fill-content mt-3">
    <thead>
      <tr>
        <th scope="col">Group</th>
        <th scope="col">Module</th>
        <th scope="col">Version</th>
      </tr>
    </thead>
    <tbody data-site-target="output">
    </tbody>
  </table>
</div>